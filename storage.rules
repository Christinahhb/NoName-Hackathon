rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Recipe images - allow authenticated users to upload to their own folder
    match /recipeImages/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read recipe images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile images - allow authenticated users to upload their own
    match /profileImages/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General public assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can upload public assets
    }
  }
}
